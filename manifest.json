{
  "manifest_version": 3,
  "name": "Text Highlighter Counter",
  "version": "1.0",
  "description": "Shows word and character counts of highlighted text",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_icon": "images/icon.svg",
    "default_title": "Text Highlighter Counter"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "images/icon.svg",
    "48": "images/icon.svg",
    "128": "images/icon.svg"
  }
} 