{
  "manifest_version": 3,
  "name": "Text Highlighter Stats",
  "version": "1.0",
  "description": "Shows word and character counts of highlighted text",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://docs.google.com/*"
  ],
  "action": {
    "default_icon": "images/icon.svg",
    "default_title": "Text Highlighter Stats",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "exclude_matches": ["https://docs.google.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["google-docs-simple.js", "images/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "images/icon.svg",
    "48": "images/icon.svg",
    "128": "images/icon.svg"
  }
} 